<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexablack"
                android:padding="10dp"
                android:text="User"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="Destination" />

            <TextView
                android:id="@+id/destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="Fill up Travel Form" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="Status" />

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="No Status Yet" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="Health" />

            <TextView
                android:id="@+id/health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="Fill up HDF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/travellerTypeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="Traveller Type" />

            <TextView
                android:id="@+id/travellerType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="Traveller Type" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/originLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="Origin" />

            <TextView
                android:id="@+id/origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="Origin" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/travelDateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="Travel Date" />

            <TextView
                android:id="@+id/travelDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="Travel Date" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/arrivalDateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="Arrival Date" />

            <TextView
                android:id="@+id/arrivalDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="Arrival Date" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/govIdLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="Gov Id" />

            <TextView
                android:id="@+id/govId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="Gov Id" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/govIdImageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="Gov Id Photo" />

            <ImageView
                android:id="@+id/govIdImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/requirementImageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/requirementText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexalight"
                android:padding="10dp"
                android:text="Requirement Photo" />

            <ImageView
                android:id="@+id/requirementImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/approve"
                android:layout_width="110dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexablack"
                android:backgroundTint="@color/green"
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:text="Approve" />

            <Button
                android:id="@+id/decline"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexablack"
                android:backgroundTint="@color/red"
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:text="Decline" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

</androidx.cardview.widget.CardView>